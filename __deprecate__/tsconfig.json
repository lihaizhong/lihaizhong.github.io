{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/server",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "charset": "utf8",
    "target": "es2017",
    "diagnostics": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "newLine": "lf",
    "pretty": true,
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    }
  },
  "include": ["server/**/*"],
  "compileOnSave": true
}
